<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Property - Pay2Stay</title>
    <link rel="icon" type="image/jpeg" href="/images/Logo.jpeg">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/addproperty.css">
</head>
<body>

    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="/">Pay2Stay</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/owner/dashboard">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Update Property Form -->
    <div class="container mt-5">
        <h2 class="text-center">Update Property</h2>
        <form action="/owner/update-property/<%= property._id %>" method="POST" enctype="multipart/form-data" class="property-form">
            
            <!-- Current Property Image -->
            <div class="mb-3">
                <label class="form-label">Current Property Image:</label><br>
                <img src="<%= property.image %>" class="img-thumbnail" width="200" alt="Property Image">
            </div>

            <!-- Upload New Property Image -->
            <div class="mb-3">
                <label class="form-label">Upload New Property Image:</label>
                <input type="file" class="form-control" name="propertyImage" accept="image/*">
            </div>

            <!-- Property Type -->
            <div class="mb-3">
                <label class="form-label">Property Type:</label>
                <select class="form-select" name="propertyType" required>
                    <option value="1BHK" <%= property.propertyType === '1BHK' ? 'selected' : '' %>>1BHK</option>
                    <option value="2BHK" <%= property.propertyType === '2BHK' ? 'selected' : '' %>>2BHK</option>
                    <option value="3BHK" <%= property.propertyType === '3BHK' ? 'selected' : '' %>>3BHK</option>
                    <option value="Bungalow" <%= property.propertyType === 'Bungalow' ? 'selected' : '' %>>Bungalow</option>
                </select>
            </div>

            <!-- Rent -->
            <div class="mb-3">
                <label class="form-label">Rent (₹):</label>
                <input type="number" class="form-control" name="rent" value="<%= property.rent %>" required>
            </div>

            <!-- Light Bill -->
            <div class="mb-3">
                <label class="form-label">Light Bill (₹):</label>
                <input type="number" class="form-control" name="lightBill" value="<%= property.lightBill %>" required>
            </div>

            <!-- Deposit -->
            <div class="mb-3">
                <label class="form-label">Deposit (₹):</label>
                <input type="number" class="form-control" name="deposit" value="<%= property.deposit %>" required>
            </div>

            <!-- Address -->
            <div class="mb-3">
                <label class="form-label">Address:</label>
                <input type="text" class="form-control" name="address" value="<%= property.address %>" required>
            </div>

            <!-- Tenant Details -->
            <h4 class="mt-4">Tenant Details (Optional)</h4>

            <div class="mb-3">
                <label class="form-label">Tenant Name:</label>
                <input type="text" class="form-control" name="tenantName" value="<%= property.tenantName || '' %>">
            </div>

            <div class="mb-3">
                <label class="form-label">Tenant Email:</label>
                <input type="email" class="form-control" name="tenantEmail" value="<%= property.tenantEmail || '' %>">
            </div>

            <div class="mb-3">
                <label class="form-label">Tenant Contact:</label>
                <input type="text" class="form-control" name="tenantContact" value="<%= property.tenantContact || '' %>">
            </div>

            <!-- Date of Occupancy -->
            <div class="mb-3">
                <label class="form-label">Date of Occupancy:</label>
                <input type="date" class="form-control" name="dateOfOccupancy" value="<%= new Date(property.dateOfOccupancy).toISOString().split('T')[0] %>" required>
            </div>

            <!-- Payment Date -->
            <div class="mb-3">
                <label class="form-label">Payment Date (Day of the Month):</label>
                <input type="number" class="form-control" name="paymentDate" value="<%= property.paymentDate %>" min="1" max="31" required>
            </div>

            <!-- Agreement PDF -->
            <div class="mb-3">
                <label class="form-label">Current Agreement PDF:</label><br>
                <a href="/convert-to-pdf/<%= property.agreementPdf.split('/').pop() %>" class="btn btn-warning">Download Agreement</a>
            </div>

            <div class="mb-3">
                <label class="form-label">Upload New Agreement PDF:</label>
                <input type="file" class="form-control" name="agreementPdf" accept="application/pdf">
            </div>

            <!-- Submit Button -->
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Update Property</button>
                <a href="/owner/dashboard" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
