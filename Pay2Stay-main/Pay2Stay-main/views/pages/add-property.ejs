<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Property - Pay2Stay</title>
    <link rel="icon" type="image/jpeg" href="/images/Logo.jpeg">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/addproperty.css">
</head>
<body>

    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="/">Pay2Stay</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/owner/dashboard">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Add Property Form -->
    <div class="container mt-5">
        <h2 class="text-center">Add New Property</h2>
        <form action="/owner/add-property" method="POST" enctype="multipart/form-data" class="property-form">
            
            <!-- Property Image -->
            <div class="mb-3">
                <label class="form-label">Property Image:</label>
                <input type="file" class="form-control" name="propertyImage" accept="image/*" required>
            </div>

            <!-- Property Type -->
            <div class="mb-3">
                <label class="form-label">Property Type:</label>
                <select class="form-select" name="propertyType" required>
                    <option value="1BHK">1BHK</option>
                    <option value="2BHK">2BHK</option>
                    <option value="3BHK">3BHK</option>
                    <option value="Bungalow">Bungalow</option>
                </select>
            </div>

            <!-- Rent -->
            <div class="mb-3">
                <label class="form-label">Rent (₹):</label>
                <input type="number" class="form-control" name="rent" required>
            </div>

            <!-- Light Bill -->
            <div class="mb-3">
                <label class="form-label">Light Bill (₹):</label>
                <input type="number" class="form-control" name="lightBill" required>
            </div>

            <!-- Deposit -->
            <div class="mb-3">
                <label class="form-label">Deposit (₹):</label>
                <input type="number" class="form-control" name="deposit" required>
            </div>

            <!-- Address -->
            <div class="mb-3">
                <label class="form-label">Address:</label>
                <input type="text" class="form-control" name="address" required>
            </div>

            <!-- Tenant Details -->
            <h4 class="mt-4">Tenant Details (Optional)</h4>

            <div class="mb-3">
                <label class="form-label">Tenant Name:</label>
                <input type="text" class="form-control" name="tenantName">
            </div>

            <div class="mb-3">
                <label class="form-label">Tenant Email:</label>
                <input type="email" class="form-control" name="tenantEmail">
            </div>

            <div class="mb-3">
                <label class="form-label">Tenant Contact:</label>
                <input type="text" class="form-control" name="tenantContact">
            </div>

            <!-- Date of Occupancy -->
            <div class="mb-3">
                <label class="form-label">Date of Occupancy:</label>
                <input type="date" class="form-control" name="dateOfOccupancy" required>
            </div>

            <!-- Payment Date -->
            <div class="mb-3">
                <label class="form-label">Payment Date (Day of the Month):</label>
                <input type="number" class="form-control" name="paymentDate" min="1" max="31" required>
            </div>

            <!-- Reminder Toggle -->
            <div class="mb-3 form-check form-switch">
                <input class="form-check-input" type="checkbox" id="reminderToggle" name="reminderEnabled">
                <label class="form-check-label" for="reminderToggle">Enable Payment Reminder (3 days before due date)</label>
            </div>

            <!-- Agreement PDF -->
            <div class="mb-3">
                <label class="form-label">Agreement PDF:</label>
                <input type="file" class="form-control" name="agreementPdf" accept="application/pdf" required>
            </div>

            <!-- Submit Button -->
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Add Property</button>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
